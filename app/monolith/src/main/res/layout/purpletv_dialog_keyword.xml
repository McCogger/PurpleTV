<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical"
android:padding="16dp">

<EditText
    android:id="@+id/purpletv_dialog_keyword__input"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Keyword" />

<Spinner
    android:id="@+id/purpletv_dialog_keyword__type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

<Button
    android:id="@+id/purpletv_dialog_keyword__color"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Pick Color" />

<Switch
    android:id="@+id/purpletv_dialog_keyword__vibration"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Enable Vibration" />
</LinearLayout>