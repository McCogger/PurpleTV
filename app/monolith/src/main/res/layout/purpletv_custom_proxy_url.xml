<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/forgot_password_email_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/default_margin_quadruple"
            android:orientation="vertical"
            android:paddingBottom="70.0dip">

            <TextView
                style="@style/ExtraLargeTitleText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin_double"
                android:text="@string/orange_custom_proxy" />

            <TextView
                android:id="@+id/description"
                style="@style/BodyText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:layout_marginBottom="@dimen/default_margin"
                android:text="@string/orange_custom_proxy_desc" />

            <EditText
                android:id="@+id/input"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:background="@drawable/input_background"
                android:importantForAutofill="no"
                android:inputType="textUri"
                android:maxLines="1"
                android:padding="@dimen/text_input_padding"
                android:textColor="@color/text_base"
                android:textSize="@dimen/font_medium" />

            <TextView
                android:id="@+id/orangetv_submit_custom_proxy_url"
                style="@style/ButtonStyle.Primary"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:enabled="false"
                android:text="@string/orange_proxy_submit" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
