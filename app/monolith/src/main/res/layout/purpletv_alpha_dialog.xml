<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/purpletv_alpha_dialog__title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alpha Build Notice"
            android:textColor="@color/text_base"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/purpletv_alpha_dialog__message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="You are currently using an alpha build of this application."
            android:textColor="@color/text_base"
            android:textSize="14sp" />

        <Button
            android:id="@+id/purpletv_alpha_dialog__ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="I Understand"
            android:textAllCaps="false" />
    </LinearLayout>
</androidx.cardview.widget.CardView>